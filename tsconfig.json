{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2021"],
    "module": "esnext",
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__"]
}
